{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/**.ts", "src/**/**.js", "bin/**.js"]
}
